---
const hero = {
  image: "/assets/images/hero-background.jpg",  // Replace with actual background image path
  title: "Explore the Forest of Fontainebleau",
  description: "Rent a bike and explore the beautiful scenery with ease.",
  button_url: "/reserve",
  button_label: "Book Now"
};
---

<section class="bg-cover bg-center pb-20 pt-56" style={`background-image: url(${hero.image});`}>
  <div class="container mx-auto flex flex-wrap h-full mb">
    
    <!-- Hero Text -->
    <div class="w-full md:w-2/3">
      <h1 class="text-4xl font-bold text-white mb-4">{hero.title}</h1>
      <p class="text-white text-lg">{hero.description}</p>
    </div>
    
    <!-- Hero Button -->
    <div class="w-full md:w-1/3 md:relative">
      <a href={hero.button_url} class="bg-accent-500 hover:bg-accent-700 text-white font-bold py-2 px-4 rounded-full ml-4 mb-4 md:absolute md:bottom-0 md:right-0">
        {hero.button_label}
      </a>
    </div>
  </div>
</section>

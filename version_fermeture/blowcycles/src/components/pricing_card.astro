---
const { title,
    description,
    base_price,
    price,
    items,
} = Astro.props;

---

<!-- Pricing Card -->
<div class="flex flex-col p-6 mx-auto w-full max-w-lg text-center text-gray-900 bg-white rounded-lg border border-gray-100 shadow xl:p-8">
    <h3 class="mb-4 text-2xl font-semibold">{title}</h3>
    <p class="font-light text-gray-500 sm:text-lg">
        {description}
    </p>
    <div class="relative my-8">
        <span class="relative text-4xl text-red-600 font-bold">
          <span> {base_price} </span>
          <span class="absolute bottom-5 left-0 block h-1 w-full -rotate-6 transform border-t-4 border-red-600"></span>
          <span class="absolute bottom-5 left-0 block h-1 w-full rotate-6 transform border-t-4 border-red-600 "></span>
        </span>
        <span class="py-4 pl-4 text-6xl font-extrabold">
          <span>{price}</span>
        </span>
      </div>
      

    <!-- List -->
    <ul role="list" class="mb-8 space-y-4 text-left h-full">
        {items.map(item => (
          <li class="flex items-center space-x-3">
              <!-- Icon -->
              <i class={item.icon}></i>
              <span>{item.text}</span>
          </li>
        ))}
    </ul>

    <a
        href="/nos_velos"
        class="text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-200 font-medium rounded-lg text-sm px-5 py-2.5 text-center"
    >
        En savoir plus
    </a>
</div>

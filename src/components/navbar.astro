const homeUrl = '/';
const navLinks = [
  // { url: '/nos_velos', text: 'Nos v√©los' },  
];
---

<!-- Navigation bar -->
<nav class="bg-white py-4 sticky top-0 z-50">
  <div class="container mx-auto flex justify-between items-center">
    <div></div>
    
    <!-- Logo Link -->
    <a href={homeUrl}>
      <img src="/images/logos/logo_blowcycles_text.svg" alt="logo blowcycles text" class="h-10 fill-current" />
    </a> 

    <!-- Navigation Links -->
    <div class="flex items-center">
      {navLinks.map(link => (
        <a href={`${link.url}`} class="text-grey-900 hover:text-primary-800 hover:underline px-3 py-2 rounded">
          {link.text}
        </a>
      ))}
    </div>
  </div>
</nav>
